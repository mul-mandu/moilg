  <!-- 모든 인생문장 가져오기 -->
  <select id="getAllSenten" resultType="com.sentence.domain.SentenceVO" >
	  	select g.*, m.nickName 
	  	from greatSentence g, memberSignup m 
	  	where g.id = m.id 
	  	and greatContentStatus = 1
	  	order by greatReg DESC  
  </select>
  	
  	

  	
  	
